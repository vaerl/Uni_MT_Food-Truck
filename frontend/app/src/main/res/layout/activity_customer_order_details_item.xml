<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_details_dish_name_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Speise"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_details_dish_price_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Preis"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/order_details_dish_name_c"
        app:layout_constraintTop_toTopOf="@+id/order_details_dish_name_c" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="â‚¬"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/order_details_dish_price_c"
        app:layout_constraintTop_toTopOf="@+id/order_details_dish_price_c" />

    <EditText
        android:id="@+id/order_details_dish_rating_c"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:inputType="number"
        android:text="Bewertung"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/order_details_dish_rating_button_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        android:text="Button"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/order_details_dish_rating_c"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bewerten" />
</android.support.constraint.ConstraintLayout>